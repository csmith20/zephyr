config UART_PIC32CXBZ2
	bool "Microchip PIC32CXBZ2 series SERCOM USART driver"
	default y
	depends on DT_HAS_MICROCHIP_PIC32CXBZ2_UART_ENABLED
	select SERIAL_HAS_DRIVER
	select SERIAL_SUPPORT_INTERRUPT
	#select SERIAL_SUPPORT_ASYNC if DT_HAS_PIC32CXBZ2_DMAC_ENABLED
	help
	  This option enables the SERCOMx USART driver for Microchip PIC32CXBZ2 MCUs.

config UART_PIC32CXBZ2_ASYNC
	bool "Async UART support for Microchip PIC32CXSG series."
	depends on DMA_PIC32CXBZ2
	depends on UART_PIC32CXBZ2
	depends on UART_ASYNC_API
